  // 获取当前时间
  const now = new Date();

  // 过滤出近三天更新的仓库
  const recentRepos = githubRepos.filter(repo => {
    const updatedAt = new Date(repo.updated_at);
    const diffDays = Math.floor((now - updatedAt) / (1000 * 60 * 60 * 24));
    return diffDays <= 3;
  });

  // 过滤出近三天有更新的star仓库
